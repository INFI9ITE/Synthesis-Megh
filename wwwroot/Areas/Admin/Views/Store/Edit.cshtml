                                            @Html.ValidationMessageFor(model => model.Data_app_userid)*@

                                        @Html.ListBoxFor(model => model.Storename_Owner, new MultiSelectList(Model.BindData_Owner, "value", "text", Model.Storename_Owner_list.Select(x => x.UserOwnermultis).ToList()), new { id = "Storename1", @class = "myval" })
                                        @Html.ValidationMessageFor(model => model.Storename_Owner)
                                    }

                                </div>
                            </div>
