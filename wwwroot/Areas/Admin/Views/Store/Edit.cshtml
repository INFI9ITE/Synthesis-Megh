    <div id="PanAddUpdate">




        <div class="header-small special_bg">
            <h3>Edit Store </h3>
        </div>
        @using (Html.BeginForm("Edit", "Store", FormMethod.Post, new { enctype = "multipart/form-data" }))
        { @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="page-body headertopbox addinvoice" style="padding-top:0px!important;">
                <div class="datagrid martop15">
                    <div class="formmain">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Store Name <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.Name, new { maxlength = 500, @class = "form-control" })
                                    <span class="highlight">     @Html.ValidationMessageFor(model => model.Name)</span>
                                </div>
                            </div>
                           
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Address 1 <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.Address, new { maxlength = 1000, @class = "form-control" })
                                    <span class="highlight">     @Html.ValidationMessageFor(model => model.Address)</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Address 2
                                    </label>
                                    @Html.TextBoxFor(model => model.Address2, new { maxlength = 1000, @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Phone Number <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.StoreNo, new { maxlength = 100, @class = "form-control", placeholder = "(555) 555-5555" })
                                    <span class="highlight">@Html.ValidationMessageFor(model => model.StoreNo)</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Fax Number <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.FaxNo, new { maxlength = 20, @class = "form-control", placeholder = "(555) 555-5555" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        EmailId <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.EmailId, new { maxlength = 250, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.EmailId)
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>
                                        Password <span class="highlight">*</span>
                                    </label>
                                    @Html.TextBoxFor(model => model.Password, new { maxlength = 250, @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Password)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @if (Model.BindBack_Office != null)
                                    {
                                        <label>
                                            Back Office Manager <span class="highlight">*</span>
                                        </label>

                                        @Html.DropDownListFor(model => model.Back_Office_userid, new SelectList(Model.BindBack_Office, "value", "text"), "Select Back Office Manager ", new { id = "Back_Office_userid", @class = "myval" })
                                        @Html.ValidationMessageFor(model => model.Back_Office_userid)
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @if (Model.BindStore_manager != null)
                                    {
                                        <label>
                                            Store Manager <span class="highlight">*</span>
                                        </label>

                                        @Html.DropDownListFor(model => model.Store_Man_userid, new SelectList(Model.BindStore_manager, "value", "text"), "Select Store Manager ", new { id = "Store_Man_userid", @class = "myval" })
                                        @Html.ValidationMessageFor(model => model.Store_Man_userid)
                                    }
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @if (Model.BindData_app != null)
                                    {
                                        <label>
                                            Data Approver <span class="highlight">*</span>
                                        </label>

                                        @*@Html.DropDownListFor(model => model.Data_app_userid, new SelectList(Model.BindData_app, "value", "text"), "Select Data Approver ", new { id = "Data_app_userid", @class = "myval" })
                                            @Html.ValidationMessageFor(model => model.Data_app_userid)*@

                                        @Html.ListBoxFor(model => model.Storename_Data_app, new MultiSelectList(Model.BindData_app, "value", "text", Model.Storename_Data_app_list.Select(x => x.UserDataAppmultis).ToList()), new { id = "Storename", @class = "myval" })
                                        @Html.ValidationMessageFor(model => model.Storename_Data_app)

